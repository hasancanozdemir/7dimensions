<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_correspondence" model="ir.actions.report">
        <field name="name">Resmi Yazı (PDF)</field>
        <field name="model">sevend.correspondence</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sevend_yazismalar.report_correspondence_template</field>
        <field name="report_file">sevend_yazismalar.report_correspondence_template</field>
        <field name="print_report_name">'Yazisma - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_sevend_correspondence"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_correspondence_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Sayı:</strong> <span t-field="o.name"/><br/>
                                <strong>Tarih:</strong> <span t-field="o.date"/><br/>
                                <strong>Konu:</strong> <span t-field="o.subject"/>
                            </div>
                            <div class="col-6 text-right">
                                <t t-if="o.project_code"><strong>Proje:</strong> <span t-field="o.project_code"/><br/></t>
                                <t t-if="o.document_number"><strong>Belge No:</strong> <span t-field="o.document_number"/></t>
                            </div>
                        </div>

                        <div class="row mt-5">
                            <div class="col-12 text-center">
                                <h3 style="text-transform: uppercase;">
                                    <span t-field="o.recipient_name"/>
                                </h3>
                                <p t-field="o.recipient_address"/>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div t-field="o.content"/>
                            </div>
                        </div>

                        <t t-if="o.reference_ids">
                            <div class="row mt-4">
                                <div class="col-12">
                                    <strong>İLGİ:</strong>
                                    <ul>
                                        <t t-foreach="o.reference_ids" t-as="ref">
                                            <li><span t-field="ref.date"/> tarihli ve <span t-field="ref.name"/> sayılı yazımız.</li>
                                        </t>
                                    </ul>
                                    <div t-field="o.reference_text"/>
                                </div>
                            </div>
                        </t>

                        <div class="row mt-5">
                            <div class="col-8"></div>
                            <div class="col-4 text-center">
                                <span t-field="o.full_name"/><br/>
                                <span t-field="o.job_title"/><br/>
                                <strong>7Dimensions</strong>
                            </div>
                        </div>

                        <t t-if="o.content_2">
                            <div class="row mt-4" style="page-break-before: always;">
                                <div class="col-12">
                                    <div t-field="o.content_2"/>
                                </div>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
